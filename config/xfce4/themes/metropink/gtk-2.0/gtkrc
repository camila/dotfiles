gtk-color-scheme = "base_color:#ffffff\nbg_color:#E6E1C8\nselected_bg_color:#DEB8B8\nselected_fg_color:#ECE9D8\ntext_color:#111111\nfg_color:#303030\nmenu_fg_color:#661844\nmenu_bg_color:#A2A2A2\nfocus_color:#F7EEEE"

style "theme-default"
{
  GtkButton      ::default_border    = { 0, 0, 0, 0 }
  GtkRange       ::trough_border     = 0
  GtkPaned       ::handle_size       = 6
  GtkRange       ::slider_width      = 14
  GtkRange       ::stepper_size      = 14

  GtkScrollbar   ::min_slider_length = 30
  GtkCheckButton ::indicator_size    = 14
  GtkMenuBar     ::internal-padding  = 0
  GtkTreeView    ::expander_size     = 14
  GtkExpander    ::expander_size     = 16
  GtkScale       ::slider-length     = 24

  GtkButton::inner_border={1,1,0,0}
  GtkToolbar::internal-padding=0
  GtkToolbar::space-size=0
  
  xthickness = 1
  ythickness = 1

  fg[NORMAL]        = @fg_color
  fg[PRELIGHT]      = @fg_color
  fg[ACTIVE]        = @fg_color
  fg[SELECTED]      = @base_color
  fg[INSENSITIVE]   = @menu_bg_color

  bg[NORMAL]        = @bg_color
  bg[PRELIGHT]      = @selected_bg_color
  bg[ACTIVE]        = @selected_bg_color
  bg[SELECTED]	    = @selected_bg_color
  bg[INSENSITIVE]   = @bg_color

  base[NORMAL]      = @base_color
  base[PRELIGHT]    = @bg_color
  base[ACTIVE]      = @bg_color
  base[SELECTED]    = @selected_bg_color
  base[INSENSITIVE] = @selected_fg_color

  text[NORMAL]      = @fg_color
  text[PRELIGHT]    = @fg_color
  text[ACTIVE]      = @text_color
  text[SELECTED]    = @text_color
  text[INSENSITIVE] = @menu_bg_color

  engine "murrine" 
  {		
	colorize_scrollbar  = FALSE
	scrollbarstyle      = 0		
	contrast = 1.1
	menubarstyle = 3 
	menubaritemstyle = 0 
	listviewheaderstyle = 1 
   	animation           = FALSE
	menustyle = 0
	menuitemstyle = 0
	listviewstyle = 0
	scrollbarstyle = 4
	roundness = 3
	glazestyle = 0	
  }
}

