# i3 config file (v4)
# Please see http://i3wm.org/docs/userguide.html for a complete reference!

##
## i3+xfce based on manjaro-tools-iso-profiles config.
## deps: appfinder, screenshooter, clipman, xflock4 and py3status (click events)
##

# Set mod key (Mod1=<Alt>, Mod4=<Super>)
set $mod Mod4

# Use Mouse+$mod to drag floating windows
floating_modifier Mod4

# i3status ttf-font-icons
font pango:Terminus, monospace, Icons 9

# Hide adjacent edges
hide_edge_borders vertical

# Theme colors
client.focused #FC6F5D #CC7878 #000000 #FFFFFF
client.unfocused #333333 #222222 #999999 #222222
client.urgent #CE1800 #900000 #FFFFFF #900000

# disable titlebars
new_window 1pixel

#===============
#  workspaces
#===============

# toggle workspaces
workspace_auto_back_and_forth yes

# Workspace names
set $ws1 "1:"
set $ws2 "2:"

#=============
#  bindsyms
#=============

bindsym $mod+Return exec i3-sensible-terminal

# reload the configuration file
bindsym $mod+Shift+c reload

# restart/exit i3
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# lock screen
bindsym $mod+Shift+l exec --no-startup-id xflock4

# kill focused window
bindsym $mod+Shift+q kill

# change focus
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# workspace back and forth (with/without active container)
bindsym $mod+b workspace back_and_forth
bindsym $mod+Shift+b move container to workspace back_and_forth; workspace back_and_forth
bindsym $mod+Control+Right workspace back_and_forth
bindsym $mod+Control+Left workspace back_and_forth

# tab bindings
bindsym $mod+Shift+Tab focus left
bindsym $mod+Tab focus right

# notify split
bindsym $mod+h split h; exec notify-send 'tile horizontally'
bindsym $mod+v split v; exec notify-send 'tile vertically'

# toggle fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle
bindsym $mod+a focus parent

# function keys
bindsym $mod+F1 exec "exo-open http://i3wm.org/docs/refcard.html"
bindsym $mod+F2 exec --no-startup-id "xfce4-appfinder --collapsed"
bindsym $mod+F3 exec "exo-open ~"
bindsym $mod+F4 exec "i3-sensible-editor"

# screenshots
bindsym $mod+Print --release exec "scrot -ue 'mv $f ~/Screenshots'; sleep 1; exec notify-send 'screenshot has been saved to ~/Screenshots'"
bindsym $mod+Shift+Print --release exec "notify-send 'selection will be saved to ~/Screenshots'; scrot -se 'mv $f ~/Screenshots'"
bindsym Print exec "xfce4-screenshooter"

# drop-down terminal
bindsym $mod+d exec "xfce4-terminal --drop-down"

# xkill
bindsym $mod+Ctrl+x exec xkill

# mute sound
bindsym XF86AudioMute exec "pactl set-sink-mute 0 toggle; pactl set-sink-mute 1 toggle"

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2

# Move focused container to workspace
bindsym $mod+Ctrl+1 move container to workspace number 1
bindsym $mod+Ctrl+2 move container to workspace number 2
bindsym $mod+Shift+1 move container to workspace number 1; workspace $ws1
bindsym $mod+Shift+2 move container to workspace number 2; workspace $ws2

# send window to scratchpad on ABNT keyboard
bindsym $mod+Shift+underscore move scratchpad
bindsym $mod+Shift+plus scratchpad show

# i3 keyboard mapping
bindsym $mod+Shift+h exec "exo-open http://i3wm.org/docs/keyboard-layer2.png"

# toggle border
bindsym $mod+Shift+x [class="^.*"] border toggle
bindsym $mod+x border toggle

##
## mouse settings
##

# The middle button over a titlebar kills the window
bindsym --release button2 kill

# The middle button and a modifer over any part of the window kills the window
bindsym --whole-window $mod+button2 kill

# The right button toggles floating
bindsym $mod+button3 floating toggle

# The side buttons move the window around
bindsym button9 move left
bindsym button8 move right

##
## modes
##

bindsym $mod+0 mode "$mode_system"
bindsym $mod+r mode "resize"

# Set shut down, restart and locking features
set $mode_system (l)ock, (e)xit, (r)eboot, (h)alt
mode "$mode_system" {
    bindsym l exec --no-startup-id i3exit lock, mode "default"
    bindsym e exec --no-startup-id i3exit logout, mode "default"
    bindsym r exec --no-startup-id i3exit reboot, mode "default"
    bindsym h exec --no-startup-id i3exit shutdown, mode "default"

    # exit system mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# Resize window, triggers on resize mode
mode "resize" {
    bindsym Left resize shrink width 10 px or 10 ppt
    bindsym Down resize grow height 10 px or 10 ppt
    bindsym Up resize shrink height 10 px or 10 ppt
    bindsym Right resize grow width 10 px or 10 ppt

    bindsym Shift+Left resize shrink width 20 px or 5 ppt
    bindsym Shift+Down resize grow height 20 px or 5 ppt
    bindsym Shift+Up resize shrink height 20 px or 5 ppt
    bindsym Shift+Right resize grow width 20 px or 5 ppt

    # exit resize mode: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# put YouTube into fullscreen and execute this for media mode
bindsym $mod+y fullscreen disable; floating enable; resize set 400 300; sticky enable; move window to position 1515 20
bindsym $mod+Shift+s resize set 400 400
bindsym $mod+Shift+t sticky toggle

# logout
bindsym $mod+Control+Delete exec --no-startup-id i3exit logout, mode "default"

#====================
#  window settings
#====================

no_focus [window_role="pop-up"]

# display titlebar
for_window [window_role="browser"] border 1pixel

# switch to workspace with urgent window automatically
for_window [urgent=latest] focus

# Disable window titlebars entirely
#for_window [class="^.*"] border pixel 1

# Open specific applications in floating mode
for_window [title="File Transfer*"] floating enable
for_window [class="GParted"] floating enable border normal
for_window [class="Lightdm-gtk-greeter-settings"] floating enable
for_window [class="Lxappearance"] floating enable sticky enable border normal
for_window [class="manjaro-settings-manager-gui"] floating enable border normal
for_window [class="Manjaro Welcome"] floating enable
for_window [class="Pamac-manager"] floating enable border normal
for_window [class="Pavucontrol"] floating enable border normal
for_window [class="Qtconfig-qt4"] floating enable sticky enable border normal
for_window [class="(?i)System-config-printer.py"] floating enable border normal
for_window [class="Skype"] floating enable border normal

# other floating windows
for_window [class="Mirage"] floating enable
for_window [class="(?i)Orage"] floating enable border normal

# xfce floating windows
for_window [window_role="[.]+"] floating enable border normal
for_window [class="Xf[.]*"] floating enable border normal
for_window [Title="Note[.]*"] floating enable
for_window [class="Thunar"] floating enable

# xfce no-float
for_window [title="Terminal"] floating disable border 1pixel
for_window [class="[.]*notifyd"] floating enable border none

#===============
#  autostarts
#===============

##
## System tray
##

# network, volume and composite manager
exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1
exec --no-startup-id nm-applet
exec --no-startup-id volumeicon
exec --no-startup-id compton -b

# manjaro pacman tray
exec --no-startup-id pamac-tray

# conky-i3 background info (adapted)
exec --no-startup-id start_conky_grey

# xflock4 with xautolock
exec --no-startup-id xautolock -time 10 -locker xflock4

# pulseaudio
exec --no-startup-id "pulseaudio --start"
exec --no-startup-id "pactl set-sink-mute 0 1; pactl set-sink-mute 1 1"

# xfce tray apps
exec --no-startup-id xfce4-power-manager
exec --no-startup-id xfce4-clipman
# exec --no-startup-id xfce4-panel --disable-wm-check

# optional apps (disabled)
# exec --no-startup-id gnome-keyring-daemon --start
# exec --no-startup-id blueman

# disable caps
exec --no-startup-id setxkbmap -option ctrl:nocaps

##
## xrandr
##

# Enable second monitor
exec_always --no-startup-id "xrandr --current | grep ' connected' | grep -v primary && ~/.screenlayout/screen.sh &"

#==========
#  i3bar
#==========

# Top i3bar + i3status
bar {
    #status_command i3status
    #tray_output primary
    font pango:Ubuntu Mono, monospace, Icons 8
    position top
    status_command py3status
    colors {
        separator #363636
        background #222222
        statusline #999999
        focused_workspace #222222 #CC7878 #FFFFFF
        active_workspace #000000 #FC6F5D #FFFFFF
        inactive_workspace #222222 #000000 #A4A28D
        urgent_workspace #CE1800 #900000 #FFFFFF
    }
    strip_workspace_numbers yes
}

##
## bg gradient
## 
exec_always --no-startup-id hsetroot -add "#777777" -add "#111111" -gradient "180"

#EOF
