[user]
    name = USER
    email = USER@users.noreply.github.com
[credential]
    helper = cache --timeout=86400
[pull]
    ff = only
[merge]
    tool = meld
[gui]
    diffopts = -w
	fontui = -family \"Droid Sans\" -size 10 -weight normal -slant roman -underline 0 -overstrike 0
	fontdiff = -family \"Droid Sans\" -size 10 -weight normal -slant roman -underline 0 -overstrike 0
	spellingdictionary = none
[guitool "checkout"]
    cmd = git checkout $FILENAME
    needsfile = yes
[alias]
    count = !git shortlog -sn
    l     = log --pretty=format:'%Cblue[%ai] %Cred%h %Cgreen%ae%Creset: %s %Cred%d%Creset' --since=2.weeks -M --name-status
    st    = status -s
